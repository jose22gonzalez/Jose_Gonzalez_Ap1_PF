@page "/C_Curso"

<EditForm Model = "lista">
    <DataAnnotationsValidator/>
    <div class="card">
        <div class="card-header">
            <h3>Consulta Grupos</h3>
        </div>
        <div class="card-body">
             <form>
                <div class="input-group d-flex align-items-end">
                    <div class="flex-fill mx-2">
                        <label>Filtro</label>
                        <select class="form-control col-2" @bind="Filtro">
                            <option value="0">Curso Id</option>
                            <option value="1">Descripcion</option>
                        </select>
                    </div>
                    <div class="flex-fill mx-2">
                        <label>Criterio</label>
                        <input type="text" class="form-control" @bind="Criterio" />
                    </div>
                    
                    <button type="button" class="btn btn-warning" @onclick="Buscar">
                        <i class="oi oi-magnifying-glass mr-2"> Buscar</i>
                    </button>
                </div>
            </form>   
        </div>
        <table class="table table-bordered">
            <thead  class="thead-darck">
                <tr class="table">
                    <th>Curso Id</th>
                    <th>Descripcion</th>
                    <th>Veces Inscripto</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in lista)
                {
                    <tr>
                        <td>@item.CursoId</td>
                        <td>@item.Descripcion</td>
                        <td>@item.VecesInscrito</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</EditForm>

@code
{
    
    public string? Filtro { get; set; }
    public string? Criterio { get; set; }
    public List<Cursos> lista = new List<Cursos>();
    
    [Inject]
    public CursoBBL cursoBBL { get; set; }

    public void Buscar()
    {
         if (Criterio != null)
        {
            switch (Filtro)
            {
                case "0":
                    lista = cursoBBL.GetList(p => p.CursoId == int.Parse(Criterio));
                    break;
                case "1":
                    lista = cursoBBL.GetList(c => c.Descripcion.ToLower().Contains(Criterio.ToLower()));
                    break;
            }
        }
        else
        {
           lista = cursoBBL.GetList(c => true);
        }
        
    }
}